<div id="jmbo" class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 center">{{msg}} {{user.username}}</h1>
  </div>
</div>

<div class="container" >
  <div class="card text-center" id="profileContainer">
    <div class="card-header">
      <h3 class="panel-title"></h3>
      
      <div class="row">
        <div class="col">

        </div>
        <div class=" col-md-9 col-lg-9 ">
          <table class="table table-user-information" >
            <tbody>
              {{!-- {{#if isUser}} --}}
              <tr>
                <td><input name="user[name]" id="user" type="text" placeholder="User Name" value="{{user.username}}" class="input pass"/> </td>
              </tr>
              <tr>
                <td><input name="user[zipcode]" id="zipcode" type="text" placeholder="ZipCode" value="{{user.zipcode}}" class="input pass"/>  </td>
              </tr>
              <tr>
                <td><input name="user[phonenumber]" id="phoneNum" type="text" placeholder="Phone Number" value="{{user.phoneNumber}}" class="input pass" />  </td>
              </tr>
              {{!-- {{/if}} --}}
            </tbody>
          </table>
        </div>
        <div class="col">

        </div>
      </div>
      <div class="card-body">
        <h5 class="card-title">Choose Your Text Times</h5>
        <div class="row">
          <div class="col-sm">
            <div class="input-field col s12">
              <h4>Sunday</h4>
              <input type="time" class="validate" id="timeInputSun" value="{{user.timePreference.Sunday}}">
            </div>
          </div>
          <div class="col-sm">
            <div class="input-field col s12">
              <h4>Monday</h4>
              <input type="time" class="validate" id="timeInputMon" value="{{user.timePreference.Monday}}">
            </div>
          </div>
          <div class="col-sm">
            <div class="input-field col s12">
              <h4>Tuesday</h4>
              <input type="time" class="validate" id="timeInputTues" value="{{user.timePreference.Tuesday}}">
            </div>
          </div>
          {{!-- <div class="row"> --}}
            <div class="col-sum">
              <div class="input-field col s12">
                <h4>Wednesday</h4>
                <input type="time" class="validate" id="timeInputWed" value="{{user.timePreference.Wednesday}}">
              </div>
            </div>
            {{!-- <div class="row"> --}}
              <div class="col-sm">
                <div class="input-field col s12">
                  <h4>Thursday</h4>
                  <input type="time" class="validate" id="timeInputThur"  value="{{user.timePreference.Thursday}}">
                </div>
              </div>
              <div class="col-sm">
                <div class="input-field col s12">
                  <h4>Friday</h4>
                  <input type="time" class="validate" id="timeInputFri" value="{{user.timePreference.Friday}}">
                </div>
              </div>
              <div class="col-sm">
                <div class="input-field col s12">
                  <h4>Saturday</h4>
                  <input type="time" class="validate" id="timeInputSat" value="{{user.timePreference.Saturday}}">
                </div>
              </div>
              <input type="submit" value="Save" class="inputButton" id="saveUsr" />
            </div>
          </div>
        </div>
        <div class="card-footer text-muted text-center">
          <a href="/">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>





  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="/js/index.js"></script>